<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PYF_Esports_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PYF_Esports_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div id="navbarOptions" class="container">
            <nav class="navbar navbar-expand-lg navbar-light fixed-top">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="/images/Logo.png" alt="PYF_Logo" class="d-inline-block align-top h-logo">
                </a>

                <!-- Navbar Toggler -->
                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-3">
                            <a class="nav-link" style="color: white">HOME</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" style="color: white">SCHEDULE</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" style="color: white">BRACKET</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" style="color: white">TEAMS</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" style="color: white">STANDINGS</a>
                        </li>
                        <li id="socials" class="nav-item mx-3 align-self-center">
                            <i class="fa-brands fa-x-twitter fa-lg icon d-none d-lg-inline-block"></i>
                            <i class="fa-brands fa-discord fa-lg icon d-none d-lg-inline-block"></i>
                            <i class="fa-brands fa-twitch fa-lg icon d-none d-lg-inline-block"></i>
                        </li>
                        <li class="nav-item mx-3 d-lg-none bottom">
                            <a class="nav-link d-lg-none" style="color: white">SOCIALS</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    
    <div id="bodyContainer" class="container">
        @RenderBody()
    </div>

    <footer>
        <div>
            <i class="fa-brands fa-x-twitter fa-2xl iconFooter"></i>
            <i class="fa-solid fa-circle"></i>
            <i class="fa-brands fa-discord fa-2xl iconFooter"></i>
            <i class="fa-solid fa-circle"></i>
            <i class="fa-brands fa-twitch fa-2xl iconFooter"></i>
            <i class="fa-solid fa-circle"></i>
            <i class="fa-brands fa-instagram fa-2xl iconFooter"></i>
        </div>
        <div id="siteLinksFooter" class="row justify-content-center" style="margin-top: 30px">
            <p class="col-1 texteFooter">Home</p>
            <p class="col-1 texteFooter">Schedule</p>
            <p class="col-1 texteFooter">Bracket</p>
            <p class="col-1 texteFooter">Teams</p>
            <p class="col-1 texteFooter">About us</p>
        </div>
        <p style="font-size: 14px; margin-top: 30px">Copyright &#64;2024 Designed by <a style="color: rgb(255, 255, 255, 0.5)">PYF ESPORTS</a></p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/63463ff979.js" crossorigin="anonymous"></script>@*Fontawesome*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
